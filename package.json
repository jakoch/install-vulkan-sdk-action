{
  "name": "install-vulkan-sdk-action",
  "version": "1.0.0",
  "private": true,
  "description": "A Github Action installing the Vulkan SDK.",
  "author": "Jens A. Koch",
  "license": "MIT",
  "homepage": "https://github.com/jakoch/install-vulkan-sdk-action#readme",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "package": "ncc build --source-map --minify",
    "test": "jest",
    "test-cov": "jest --coverage",
    "audit": "npm audit --audit-level=high",
    "all": "npm run format && npm run build && npm run audit && npm run package && npm test"
  },
  "keywords": [
    "actions",
    "vulkan",
    "vulkan-sdk",
    "setup",
    "install"
  ],
  "main": "lib/main.js",
  "dependencies": {
    "@actions/cache": "^2.0.2",
    "@actions/core": "^1.6.0",
    "@actions/http-client": "^1.0.11",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@vercel/ncc": "^0.33.4",
    "jest": "^27.5.1",
    "jest-circus": "^28.1.1",
    "jest-runtime": "^27.2.0",
    "prettier": "2.7.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakoch/install-vulkan-sdk-action.git"
  },
  "bugs": {
    "url": "https://github.com/jakoch/install-vulkan-sdk-action/issues"
  }
}
